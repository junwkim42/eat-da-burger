<h1>EAT-DA-BURGER!</h1>

<div class="container">
    <div class="row">
    <div class="col-md-4">
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
    </div>
    <div class="col-md-4">
<img src="/assets/img/burger.jpg"></img>
    </div>
    <div class="col-md-4">
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/devoured-block}}
    {{/if}}
  {{/each}}
</ul>
    </div>
</div>    
</div>
<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bur">burger Name:</label>
    <input type="text" id="bur" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
